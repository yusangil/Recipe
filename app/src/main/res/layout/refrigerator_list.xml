<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sangil.MainActivity"
    tools:ignore="MergeRootFrame">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="60dp"
                android:weightSum="10"
                android:layout_gravity="center_horizontal|top">
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/back"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="냉장고"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textSize="40dp"
                    android:id="@+id/textView"
                    android:layout_weight="8"
                    android:layout_gravity="center" />
                <ImageView
                    android:id="@+id/plus_button"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/pluss"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:text="상태"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/whiteblue3"
                    android:textSize="15dp"
                    android:id="@+id/status_col" />
                <TextView
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/whiteblue"
                    android:textSize="15dp"
                    android:id="@+id/name_col"/>
                <TextView
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="개수"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="15dp"
                    android:background="@color/whiteblue3"
                    android:id="@+id/count_col"/>
                <TextView
                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="무게"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="15dp"
                    android:background="@color/whiteblue"
                    android:id="@+id/gram_col"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="유통기한"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/whiteblue3"
                    android:textSize="15dp"
                    android:id="@+id/shelfLife_col"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_completed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>

    </FrameLayout>
</LinearLayout>